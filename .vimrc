set backspace=indent,eol,start

" Show line numbers on the sidebar.
set number

" New lines inherit the indentation of previous lines.
set autoindent

" Indent using four spaces.
set tabstop=4

" When shifting, indent using four spaces.
set shiftwidth=4

" Insert “tabstop” number of spaces when the 'tab' key is pressed.
set smarttab

" equals how many columns (=spaces) the cursor moves right when you press <Tab>, and how many columns it moves left when you press <BS> (backspace) to erase a tab.
set softtabstop=4

" Enable mouse for scrolling and resizing.
set mouse=a

" Enable search highlighting.
set hlsearch

" Ignore case when searching.
set ignorecase

" Incremental search that shows partial matches.
set incsearch

" Avoid wrapping a line in the middle of a word.
set linebreak

" The number of screen lines to keep above and below the cursor.
set scrolloff=2

" Always display status bar
set laststatus=2

" Always show cursor position
set cursorline

" Set window's title
set title

" Use color that suit a dark background
set background=dark

" Display a confirmation dialog when closing a file
set confirm

" Increase undo limit
set history=1000

